{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@configs": [
        "./configs/index.d.ts"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@https/*": [
        "src/https/*"
      ],
      "@layout/*": [
        "src/layout/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@router/*": [
        "src/router/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
    }
  },
  "include": [
    "src/**/*",
    "configs/**/*",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}